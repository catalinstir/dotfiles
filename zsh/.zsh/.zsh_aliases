# Eza
## Basic replacements
alias ls="eza --icons --group-directories-first"
alias l="eza -la --git --header --icons auto"

## Tree views
alias lt="eza -l --git -T --hyperlink --icons --header"

## Git integration
alias lg="eza --icons --group-directories-first -lh --git"
alias lga="eza --icons --group-directories-first -lha --git"

## Sorting options
alias lS="eza --icons --group-directories-first -lh --sort=size"
alias lT="eza --icons --group-directories-first -lh --sort=modified"
alias lX="eza --icons --group-directories-first -lh --sort=extension"

## Special views
alias lD="eza --icons -lhD"  # Only directories
alias lf="eza --icons -lhf"  # Only files
alias lh="eza --icons -lhd .*"  # Only hidden files

## Detailed info
alias lli="eza --icons --group-directories-first -lh --git --header --inode --links"

compdef l=eza

